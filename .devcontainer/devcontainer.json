{
  "name": "Kotlin Gradle DevContainer",
  "image": "mcr.microsoft.com/devcontainers/java:21",
  "containerEnv": {
    "JAVA_HOME": "/usr/lib/jvm/msopenjdk-current"
  },
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "fwcd.kotlin"
      ],
      "settings": {
        "kotlin.experimental.debug.enabled": true
      }
    }
  },
  "remoteUser": "vscode"
}
