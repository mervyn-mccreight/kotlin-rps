{
  "name": "Kotlin Gradle DevContainer",
  "image": "mcr.microsoft.com/devcontainers/java:21",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "kotlin-lsp.vscode-kotlin-lsp",
        "fwcd.kotlin-debug-adapter",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-gradle",
        "redhat.java"
      ],
      "settings": {
        "kotlin.languageServer.trace.server": "verbose"
      }
    }
  },
  "postCreateCommand": "./gradlew --no-daemon tasks || true",
  "remoteUser": "vscode"
}
